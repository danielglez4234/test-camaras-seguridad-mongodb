extends layout.pug

block content
  article.article_backg_index.grid-container.portfolio-intro
    div

      h1.h1_index_animation

  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each projects in project
        .cell
          a(href='')
            video(width='320', height='240', autoplay muted)
              source(src=`${projects.src}`, type='video/mp4')
            h5 #{projects.name}
            h6 #{projects.descripcion}
            h6 #{projects.datos}
            h6 #{projects.footerdata}
